<div id="subhead">
	<h2>Projects</h2>
</div>

<div id="feature">
<% if current_user %>

    <h4><%= current_user.username.capitalize %>'s Projects</h4>

	<% @projects.each do |p| %>
  
    <p><%= link_to(p.title, project_path(p.title))  %></p>

	<% end %>
  
<% else %>

  <p><%= "No Projects" %></p>
  
<% end %>

<%= link_to("Create New Project", new_project_path) %>

</div>
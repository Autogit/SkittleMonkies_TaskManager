<h2>Edit Task</h2>


<%= form_for @task do |f| %>

	<%= f.label :task_name %>
	<%= f.text_field :task_name %>

	<%= f.label :status %>
	<%= f.text_field :status %>

	<%= f.label :description %>
	<%= f.text_area :description %>

	<%= f.submit %>

<% end %>

<h2>Assign Category</h2>

<%= form_for @category, :url => update_path do |c| %>
  <%= c.label @category.name %>
  <%= c.check_box :name %>
  
  <%= c.submit %>
<% end %>
